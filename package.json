{
  "name": "starter-template",
  "version": "1.0.0",
  "description": "",
  "main": "client/main.js",
  "scripts": {
    "start": "node server/server",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "mkdir": "mkdir -p build",
    "clean": "rm -rf build",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:js && npm run build:css",
    "serve": "nodemon server/server",
    "watch": "npm run watch:html & npm run watch:js & npm run watch:css",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "build:html": "npm run clean:html && cp index.html build/",
    "clean:html": "rm -f build/index.html",
    "watch:js": "npm run build:js && webpack --watch",
    "build:js": "npm run clean:js && webpack",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "build:css": "npm run clean:css && lessc --source-map client/css/style.less build/$npm_package_name.$npm_package_version.css",
    "watch:css": "npm run build:css && chokidar 'client/css/**/*.less' -c 'npm run build:css'",
    "clean:css": "rm -f build/$npm_package_name.$npm_package_version.css build/$npm_package_name.$npm_package_version.css.map",
    "dev": "npm run watch & npm run serve"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "mongoose": "^4.6.3",
    "passport": "^0.3.2",
    "passport-google-oauth20": "^1.0.0",
    "passport-http-bearer": "^1.0.1",
    "react": "^15.3.1",
    "react-addons-update": "^15.3.2",
    "react-dom": "^15.3.1",
    "react-google-login": "^2.5.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "thunk": "0.0.1",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "chokidar-cli": "^1.2.0",
    "less": "^2.7.1",
    "nodemon": "^1.10.2",
    "webpack": "^1.13.1"
  }
}
